# Use an official Python runtime as a parent image
FROM python:3.6.1

# Set the working directory to /app
RUN mkdir -p /app
WORKDIR /app

# add requirements
ADD requirements.txt /app/

# install requirements
RUN pip install -r requirements.txt

# add app
ADD . /app/

# run spider
RUN scrapy crawl prawie -o zenek.jl
